<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Usuários</h2>
    <a class="btn btn-success" href="/admin/users/create">Criar novo usuário</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>E-mail</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
            <tr>
                <th><%= user.id %></th>
                <th><%= user.email %></th>
                <th>
                    <a class="btn btn-warning" href="/admin/users/edit/<%= user.id %>">Editar</a>
                    <form method="post" action="/admin/users/delete" style="display: inline;" onsubmit="confirmDelete(event, this)">
                        <input type="hidden" name="id" value="<%= user.id %>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>

                </th>
            </tr>
            <% }); %>
        </tbody>


    </table>
</div>
<%- include ('../../partials/footer.ejs') %>
<script>
    function confirmDelete(event, form) {
        event.preventDefault();
        var decision = confirm("Deseja excluir esse usuário?");
        if (decision) {
            form.submit();
        } else {
            
        }
        
    }
</script>